{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev-server",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": {
            "regexp": ".*",
            "file": 1,
            "location": 2,
            "message": 0
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*rsbuild dev.*|.*starting dev server.*",
            "endsPattern": ".*ready.*|.*compiled successfully.*|.*dev server running at.*"
          }
        }
      ]
    }
  ]
}
