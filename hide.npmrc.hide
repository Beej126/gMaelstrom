# in tandem with package.json "engines" setting, makes sure we're using pnpm vs npm
engine-strict=true
ignore-scripts=false

# Disable the hanging progress bar
progress=false

# Force immediate network failure (instant exit)
# registry=0.0.0.0
registry=file: **** NPM IS BLOCKED - USE PNPM! ***
fetch-retries=0
fetch-retry-mintimeout=1
fetch-retry-maxtimeout=1
